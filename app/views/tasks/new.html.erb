<div class= "m-2 p-2">
  <h1>New task</h1>

  <%= form_with model: @task do |f| %>
    <div class="form-group mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'%>
    </div>
    <div class="form-group mb-3">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
    </div>
    <div class="mb-4">
    <%= f.submit %>
    </div>
  <% end %>

  <hr />

  <%= link_to "Back to list", tasks_path %>
<div/>
