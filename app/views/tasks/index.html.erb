<div class= "m-2 p-2">
  <h1>My tasks</h1>

  <% @tasks.each do |task| %>
    <% if task.completed %>
      <div class="d-felx">
        <i class="fa-regular fa-square-check"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
        <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% else %>
      <div class="task-list">
        <i class="fa-regular fa-square"></i>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
        <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <hr />

  <%= link_to "Add a new task", tasks_new_path %>

</div>
